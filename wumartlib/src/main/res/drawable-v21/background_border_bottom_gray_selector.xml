<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/alertdialog_line">
    <item>
            <selector>
                <item android:state_pressed="true">
                    <layer-list >
                        <item
                            android:top="-1px"
                            android:right="-1px"
                            android:left="-1px">
                            <shape>
                                <solid android:color="@color/WINDOW_BACKGROUND"/>
                                <stroke
                                    android:width="1px"
                                    android:color="@color/COLOR_BORDER_LINE"/>
                            </shape>
                        </item>
                    </layer-list>
                </item>

                <item android:drawable="@drawable/shape_border_bottom_gray"/>
            </selector>
        </item>
    </ripple>
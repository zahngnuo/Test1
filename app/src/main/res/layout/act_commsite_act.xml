<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   style="@style/MatchMatch"
    >
  <wmpos.test.weight.OverScrollView
     style="@style/MatchMatch"
      >
      <LinearLayout
         style="@style/MatchWrap.Vertical"
         android:gravity="center_horizontal"
          >
          <wmpos.test.weight.RoundImageView
              android:id="@+id/iv_headPortrait"
              style="@style/WrapWrap"
              android:layout_marginBottom="13dp"
              android:layout_marginTop="41dp"
              android:src="@drawable/image"
              app:border_color="#73fffffe"
              app:border_size="1.5dp"  />
          <TextView
              android:id="@+id/id_username_st"
             style="@style/WrapWrap"
             android:textColor="#232627"
              android:textSize="20sp"
              android:text="XX"
              android:layout_marginBottom="11dp"
              android:gravity="center"
              />
          <wmpos.test.weight.StockTextView
              android:id="@+id/id_userno_sv"
              style="@style/WrapWrap"
              app:textLeftColor="#232627"
              app:textLeftSize="16"
              app:textLeftTxt="员工编号:"
              app:textRightColor="#232627"
              app:textRightSize="16"
              app:textRightTxt=""
               />
          <wmpos.test.weight.StockTextView
              android:id="@+id/id_usersiteno_sv"
              style="@style/WrapWrap"
              android:layout_marginTop="8dp"
              app:textLeftColor="#232627"
              app:textLeftSize="16"
              app:textLeftTxt="收银员编号:"
              app:textRightColor="#232627"
              app:textRightSize="16"
              app:textRightTxt=""
              />
          <TextView
              android:id="@+id/id_tv_text"
              style="@style/WrapWrap"
              android:layout_marginTop="21dp"
              android:text="您的门店是："
              android:textColor="#232627"
              android:textSize="16sp"/>
          <TextView
              android:id="@+id/id_sitename_tv"
              style="@style/WrapWrap"
              android:layout_marginTop="3dp"
              android:text="田村路店"
              android:textColor="#232627"
              android:textSize="30sp"
              />
          <TextView
              android:id="@+id/id_siteno_tv"
              style="@style/WrapWrap"
              android:text="3333"
              android:layout_marginTop="1dp"
              android:textColor="#232627"
              android:textSize="26sp"
              />
          <TextView
              style="@style/WrapWrap"
              android:layout_marginTop="28dp"
              android:textColor="#dd2133"
              android:textSize="14sp"
              android:text="请仔细核对员工编号及店号是否正确"
              />
          <TextView
              style="@style/WrapWrap"
              android:layout_marginTop="2dp"
              android:textColor="#dd2133"
              android:textSize="14sp"
              android:text="若不正确请联系主管"
              />
          <LinearLayout
              style="@style/MatchWrap.Horizontal"
              android:layout_marginTop="43dp"
              android:gravity="center"
              android:paddingBottom="50dp"
              android:paddingLeft="20dp"
              android:paddingRight="20dp">
               <android.support.v7.widget.AppCompatButton
                   android:id="@+id/id_pos_btn"
                   android:layout_width="0dp"
                   android:layout_height="40dp"
                   android:layout_weight="2"
                   android:background="@color/pcd_tips_green"
                   android:text="信息正确，开始收款"
                   android:textColor="@android:color/white"
                   />
              <android.support.v7.widget.AppCompatButton
                  android:id="@+id/id_nes_btn"
                  android:layout_width="0dp"
                  android:layout_height="40dp"
                  android:layout_weight="1.5"
                  android:text="信息错误"
                  android:layout_marginLeft="35dp"
                  android:background="#df241d"
                  android:textColor="@android:color/white"
                  />
          </LinearLayout>
      </LinearLayout>
  </wmpos.test.weight.OverScrollView>
</RelativeLayout>

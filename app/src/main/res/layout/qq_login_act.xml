<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <LinearLayout
        style="@style/MatchMatch.Vertical"
         android:gravity="center_horizontal"
         >
    <wmpos.test.weight.RoundImageView
        android:id="@+id/iv_headPortrait"
        style="@style/WrapWrap"
        android:src="@drawable/image"
        android:layout_marginTop="30dp"
        app:border_color="#73fffffe"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
        <LinearLayout
            style="@style/loginLayout"
            >
         <TextView
           style="@style/loginText"
             android:text="账号:" />
         <com.wumart.lib.widget.ClearEditText
             android:id="@+id/id_user_name"
             style="@style/loginEdit"
             android:hint="请输入会员信息"
             android:maxLines="11"
             />
        </LinearLayout>
        <LinearLayout
            style="@style/loginLayout">
            <TextView
                style="@style/loginText"
                android:text="密码:" />
            <com.wumart.lib.widget.ClearEditText
                android:id="@+id/id_user_password"
                style="@style/loginEdit"
                android:hint="请输入账号信息"
                android:maxLines="11"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/new_user"
            style="@style/loginText"
            android:text="注册用户"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            />
   <android.support.v7.widget.AppCompatButton
       android:layout_margin="20dp"
      style="@style/MatchWrap"
       android:text="登录"
       android:textSize="30sp"
       android:onClick="qqLogin"
       android:background="@color/blue"
       />
    </LinearLayout>


</RelativeLayout>

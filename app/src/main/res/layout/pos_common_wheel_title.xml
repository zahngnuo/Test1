<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
 <include  layout="@layout/line_horizontal_1px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/choose_cancel"
            style="@style/datedialog"
            android:text="取消"
            android:gravity="center"
            />
    <LinearLayout
        style="@style/AutoMatch.Horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/id_iv_timeleft"
            style="@style/WrapWrap"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="42dp"
            android:paddingTop="10dp"
            android:src="@drawable/left" />

        <TextView
            android:id="@+id/choose_title"
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:text="2016"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/id_iv_timeright"
            style="@style/WrapWrap"
            android:paddingBottom="10dp"
            android:paddingLeft="42dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:src="@drawable/right" />
    </LinearLayout>

    <Button
        android:id="@+id/choose_confirm"
        style="@style/datedialog"
        android:gravity="right|center_vertical"
        android:text="确认" />
    </LinearLayout>

</merge>
